@{
    ViewBag.Title = "Home Page";
}

@model InteractionLayer.Models.Login

<div class="row jumbotron">
    <div class="col-md-12">
        <form method="POST" id="loginForm" name="loginForm" redirect="true">
            @Html.AntiForgeryToken()
            <div class="">
                <label for="name-5a14" class="u-form-control-hidden u-label" wfd-invisible="true">Username</label>
                <input asp-for="Username" type="text" placeholder="Username" id="Username" name="Username" class="form-control" required="" autofocus="autofocus">
            </div>
            <div class="">
                <label for="email-5a14" class="u-form-control-hidden u-label" wfd-invisible="true">Password</label>
                <input asp-for="Password" type="password" placeholder="Password" id="email-5a14" name="password" class="form-control" required="required">
                @*<span class="btn-show-pass">
                        <i id="showPassword" class="fas fa-eye-slash"></i>
                    </span>*@
            </div>
            <div class="">
                @*<a href="#" class="u-btn u-btn-round u-btn-submit u-button-style u-hover-palette-1-dark-1 u-palette-1-base u-radius-12 u-btn-1">Submit</a>*@
                @*<input type="submit" value="submit" class="btn btn-success">*@
                <button type="submit" class="btn btn-success">Log In</button>
            </div>
        </form>
    </div>
</div>