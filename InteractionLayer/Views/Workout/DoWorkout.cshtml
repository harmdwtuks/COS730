@model InteractionLayer.Models.Workout.WorkoutViewModel

@{
    ViewBag.Title = "DoWorkout";
}

<h2>Workout</h2>


<form id="NewWorkoutForm">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <h3>@Model.WorkoutTitle</h3>
        </div>
    </div>

    <br />
    <div class="row">
        <div class="col-md-12">
            <label>Estimated Duration</label>
            <p>@Model.EstimatedDuration</p>
        </div>
    </div>

    <br />
    <div class="row">
        <div class="col-md-12">
            @foreach (var exercise in Model.Exercises)
            {
                <div class="row">
                    <div class="col-md-3">
                        <label>Exercise</label>
                        <br />
                        <input id="Exercise" name="Exercise" disabled class="form-control" value="@exercise.ExerciseName">
                    </div>

                    <div class="col-md-1">
                        <label>Sets</label>
                        <br />
                        <input id="Sets" name="Sets" type="number" class="form-control" value="@exercise.Sets">
                    </div>

                    <div class="col-md-1">
                        <label>Repititions</label>
                        <br />
                        <input id="Repititions" name="Repititions" type="number" class="form-control" value="@exercise.Repititions">
                    </div>

                    <div class="col-md-2">
                        <label>Weight</label>
                        <br />
                        <input id="Weight" name="Weight" type="number" class="form-control" value="@exercise.Weight">
                    </div>

                    <div class="col-md-2">
                        <label>Duration</label>
                        <br />
                        <input id="Duration" type="time" name="Duration" class="form-control" step="1" value="@exercise.Duration" pattern="[0-9]{2}:[0-9]{2}:[0-9]{2}">
                    </div>

                    <div class="col-md-3">
                        <label></label>
                        <br />
                        <div class="btn-group">
                            <button id="Timer" data-val="@exercise.Duration" class="btn btn-info">Timer</button>
                            <button id="Stopwatch" class="btn btn-primary">Stopwatch</button>
                            <button id="CompleteWorkout" data-Id="@exercise.ExerciseId" class="btn btn-success">Finish</button>
                        </div>
                    </div>
                </div>
                <br />
            }
        </div>
    </div>

    <br />
    <div class="row">
        <div class="col-md-12">
            <button id="CompleteWorkout" type="submit" class="btn btn-success">Complete Workout</button>
        </div>
    </div>
</form>